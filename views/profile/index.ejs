<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>profile</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
   

    <style>
        body{
            padding: 1rem;
        }
        .mainh{
            font-size: 4rem;
        }
        .profiles{
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }
        a{
            text-decoration: none;
        }
        .profile{
            margin: 1rem;
            padding: .3rem;
            /* padding-top: 0; */
            border-radius: .2rem;
            background-color: #242424;
            height: 15rem;
            width: 11.7rem;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: start;
        }
        .profile:hover{
            box-shadow: 2px 2px 7px #666666;
        }
        .profilePic img{
            height: 7rem;
            width: 11rem;
            align-self: flex-start;
            border-radius: .2rem;
            object-fit: cover;
        }
        .profileInfo{
            min-height: inherit;
            padding-left: .2rem;
            margin-top: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .btn{
            border-radius: 50%;
            animation: 2s;
        }
        .hidden{
            font-size: 1rem;
            /* background-color: #666666; */
            display: none;
        }
        .btn:hover{
            border-radius: 2.5rem;
        }
        .btn:hover > .hidden{
            display: inline;
        }
        .star:nth-child(1),
        .star:nth-child(2),
        .star:nth-child(3),
        .star:nth-child(4),
        .star:nth-child(5){
            background-image: linear-gradient(to top, #30cfd0 0%, #330867 100%);
        }
        .star:nth-child(6),
        .star:nth-child(7),
        .star:nth-child(8),
        .star:nth-child(9),
        .star:nth-child(10){
            background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .star:nth-child(11),
        .star:nth-child(12),
        .star:nth-child(13),
        .star:nth-child(14),
        .star:nth-child(15){
            background-image: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
        }

    </style>

    
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="main box">
    <h1 class="mainh mt-3">RMSTU Affiliates
        <a class="hov" href="/profile/new"><button class="btn btn-success"><i class="fa-solid fa-user-plus"> </i><span class="hidden">    Create a new profile</span></button></a>
    </h1>

    <% if(hallOfFame.length>0){ %>
        <h1 class="mt-2">Stars of RMSTU</h1>
        <div class="profiles">
            
            <% for(let star of hallOfFame){ %>
                <a href="/profile/<%=star._id%>">
                    <div class="profile star">
                        <div class="profilePic">
                            <img src="/assets/profile/000.jpg" alt="">
                        </div>
                        <div class="profileInfo">
                            <div class="name"><b> <%= star.name %></b></div>
                            <br>
                            <div class="info"> Impact: <%= star.impactScore %></div>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    <% } %>

   
    <% if(faculties.length>0){ %>
        <h1 class="mt-2">Teachers of RMSTU</h1>
        <div class="profiles">
            
            <% for(let teacher of faculties){ %>
                <a href="/profile/<%=teacher._id%>">
                    <div class="profile">
                        <div class="profilePic">
                            <img src="/assets/profile/000.jpg" alt="">
                        </div>
                        <div class="profileInfo">
                            <div class="name"><b> <%= teacher.name %></b></div>
                            <br>
                            <div class="info"> <%= teacher.designation %></div>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    <% } %>


    
    <% if(students.length>0){ %>
        <h1 class="mt-2">Students of RMSTU</h1>
        <div class="profiles">
            
            <% for(let student of students){ %>
                
                <a href="/profile/<%=student._id%>">
                    <div class="profile">
                        <div class="profilePic">
                            <img src="/assets/profile/000.jpg" alt="">
                        </div>
                        <div class="profileInfo">
                            <div class="name"><b>  <%= student.name %></b></div>
                            <br>
                            <div class="info">REG: <%= student.registrationNo %></div>
                        </div>
                    </div>
                </a>
            
            <% } %>
        </div>
    <% } %>


</body>
</html>